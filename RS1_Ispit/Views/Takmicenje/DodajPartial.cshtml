@model RS1_Ispit_asp.net_core.ViewModels.DodajVM

<h4>Dodaj Takmicenje</h4>
<div class="row">
    <div class="col-md-4 col-sm-4">
        <form class ="form" asp-action="Dodaj">
            <div class="form-group">
                <label asp-for="SkolaId" class="control-label">Skola</label>
                <select asp-for="SkolaId" asp-items="@Model.Skole.Select(s => new SelectListItem { Value = s.Id.ToString(), Text = s.Naziv})" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="PredmetId" class="control-label">Predmeti</label>
                <select asp-for="PredmetId" asp-items="@Model.Predmeti.Select(s => new SelectListItem { Value = s.Id.ToString(), Text = s.Naziv + " "+s.Razred })" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Datum" class="control-label"></label>
                <input  value ="@Model.Datum.ToString("dd.MM.yyyy")" readonly class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Snimi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>